page{
    width: 750rpx;
    height: 100%;
}
.createPacket-wrapper{
    width: 100%;
    height: 100%;
    background: #fffadf
}
.createPacket-header{
    display: flex;
    width: 100%;
    height: 85rpx;
    align-items: center;
    justify-content: center;
    background: #d55645;
}
.createPacket-header image{
    margin-left: 30rpx;
    width: 22rpx;
    height: 38rpx;    
}
.createPacket-header text{
   flex: 1;
   text-align: center;
   color: #fff;
}
.createPacket-container{
    display: flex;
    flex-direction: column; 
    align-items: center;
    background: url(../../images/openPacket.png)no-repeat;
    background-size: 100% 200rpx;
}
.createPacket-container .avatar{
    margin-top: 110rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}
.createPacket-container .name{
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #dcac00;
}
.createPacket-container .packet-money{
    font-size: 104rpx;
}
.createPacket-container .desc{
    margin-top: 0rpx;
    font-size: 30rpx;
}
.createPacket-container .tip{
    margin-top: 12rpx;
    font-size: 26rpx;
    color: #999
}
.createPacket-container .send-btn{
    margin: 72rpx 0 62rpx 0;
    width: 330rpx;
    height: 84rpx;
    line-height: 84rpx;
    text-align: center;
    border-radius: 50rpx;
    color: #000;
    background: #ffd087; 
}
.createPacket-container .check-answer{
    display: flex;
    align-items: center;
    justify-content: center
}
.createPacket-container .check-answer image{
    width: 34rpx;
    height: 34rpx;
}
.createPacket-container .check-answer text{
    margin-left: 14rpx;
    font-size: 30rpx;
    color: #909090
}