<view class="checkAnswer-wrapper">
    <view class="checkAnswer-header">
        <image src="../../images/arrow-left.png" bindtap="gobackHistory"></image>
        <text>查看答案</text>
    </view>
    <view class="checkAnswer-container"  >
            <view class="checkAnswer-tiem" wx:for="{{answerList}}" wx:for-index="key">
                <view class="question">
                    <view class="index">{{key+1}}</view>
                    <text class="content">{{item.topic}}</text>
                </view>
                <view class="answer">
                    <view class="true">
                        <image src="../../images/result-yes.png"></image>
                        <text>{{item.answer}}</text>
                    </view>
                    <view class="false"  wx:if="{{item.errorId != item.answerId}}">
                        <image src="../../images/result-no.png"></image>
                        <text>女汉子</text>
                    </view>
                    <image class="tip-icon" src="../../images/tip.png" wx:if="{{item.errorId == item.answerId}}"></image>  
                </view>
            </view>
    </view>
</view>