page{
    width: 750rpx;
    height: 100%;
}
.checkAnswer-wrapper{
    width: 100%;
    height: 100%;
    background: #e0e0e0
}
.checkAnswer-header{
    display: flex;
    width: 100%;
    height: 85rpx;
    align-items: center;
    justify-content: center;
    background: #f92241;
}
.checkAnswer-header image{
    margin-left: 30rpx;
    width: 22rpx;
    height: 38rpx;    
}
.checkAnswer-header text{
   flex: 1;
   text-align: center;
   color: #fff;
}
.checkAnswer-container{
    position: relative;
    width: 100%;
}
.checkAnswer-container .checkAnswer-tiem{
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    width: 100%;
    background: #fff;
}
.question{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 112rpx;
    border-bottom: 1rpx solid #e0e0e0
}
.question .index{
    margin: 0 32rpx;
    width: 46rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    border-radius: 50%;
    font-size: 30rpx;
    color: #fff;
    background: #ffb820;
}
.question .content{
    flex: 1;
    font-size: 30rpx;
}
.answer{
    padding: 38rpx 0 38rpx 76rpx;
}
.answer .false{
    margin-top: 38rpx;
}
.answer .true, .answer .false{
    display: flex;
    align-items: center;
    justify-content: center;
}
.answer .true image,.answer .false image{
    width: 43rpx;
    height: 43rpx
}
.answer .true text,.answer .false text{
    display: block;
    margin-left: 30rpx;
    flex: 1;
    font-size: 30rpx;
}
.tip-icon{
    position: absolute;
    right: 28rpx;
    bottom: 8rpx;
    width: 164rpx;
    height: 127rpx;
}